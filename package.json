{
  "name": "billing-accounting-app",
  "version": "1.0.0",
  "description": "Comprehensive Billing & Accounting Application with Electron + React + Node.js",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:desktop\"",
    "dev:server": "npm run dev --workspace=packages/server",
    "dev:desktop": "npm run dev --workspace=packages/desktop",
    "build": "npm run build --workspaces",
    "build:server": "npm run build --workspace=packages/server",
    "build:desktop": "npm run build --workspace=packages/desktop",
    "test": "npm run test --workspaces",
    "test:server": "npm run test --workspace=packages/server",
    "test:desktop": "npm run test --workspace=packages/desktop",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "npm run setup:db && npm run setup:desktop",
    "setup:db": "npm run setup:db --workspace=packages/server",
    "setup:desktop": "npm run setup:desktop --workspace=packages/desktop"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/billing-accounting-app.git"
  },
  "keywords": [
    "accounting",
    "billing",
    "electron",
    "react",
    "typescript",
    "nodejs",
    "prisma",
    "offline-first"
  ],
  "author": "Your Name",
  "license": "MIT"
}
